<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol>655</defaultcontrol>
    <visible>!System.ScreenSaverActive</visible>
    <controls>
    	<control type="image">
			<include>FullscreenDimensions</include>
			<texture>black.png</texture>
		</control>
    	<control type="multiimage">
			<include>FullscreenDimensions</include>
			<aspectratio>scale</aspectratio>
			<imagepath background="true">$INFO[Container(655).ListItem.Property(Fanart_Image)]</imagepath>
			<fadetime>400</fadetime>
			<visible>!IsEmpty(Container(655).ListItem.Property(Fanart_Image))</visible>
		</control>
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture>background.png</texture>
			<colordiffuse>$VAR[ColorBackgroundVar]</colordiffuse>
		</control>
		<control type="group">
			<visible>Control.IsVisible(655)</visible>
			<include>Window_OpenClose_Animation</include>
			<top>-90</top>
			<control type="panel" id="655">
				<left>105</left>
				<top>179</top>
				<width>1000</width>
				<height>900</height>
				<onleft>655</onleft>
				<onright>60</onright>
				<onup>655</onup>
				<ondown>655</ondown>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<viewtype label="31021">icons</viewtype>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<itemlayout height="300" width="200">
					<control type="group">
						<visible>!ListItem.IsSelected</visible>
						<control type="image">
							<width>200</width>
							<height>300</height>
							<aspectratio>scale</aspectratio>
							<texture fallback="DefaultFallback.png" background="true">$INFO[ListItem.Art(thumb)]</texture>
							<fadetime>300</fadetime>
						</control>
						<control type="image">
							<width>200</width>
							<height>300</height>
							<texture>thumbs/diffuse.png</texture>
							<fadetime>300</fadetime>
						</control>
						<control type="image">
							<left>140</left>
							<top>0</top>
							<width>60</width>
							<height>60</height>
							<texture>$VAR[OverlayVar]</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
						</control>
					</control>
					<control type="group">
						<visible>ListItem.IsSelected</visible>
						<animation effect="zoom" start="95" end="100" time="200" tween="sine" easing="inout" center="auto" reversible="false">Focus</animation>
						<control type="image">
							<width>200</width>
							<height>300</height>
							<aspectratio>scale</aspectratio>
							<texture fallback="DefaultFallback.png" background="true">$INFO[ListItem.Art(thumb)]</texture>
							<fadetime>300</fadetime>
							<bordertexture colordiffuse="$VAR[ColorHighlightVar]" border="9">thumbs/thumbnail_focused.png</bordertexture>
							<bordersize>8</bordersize>
						</control>
						<control type="image">
							<left>132</left>
							<top>8</top>
							<width>60</width>
							<height>60</height>
							<texture>$VAR[OverlayVar]</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
						</control>
					</control>
				</itemlayout>
				<focusedlayout height="300" width="200">
					<control type="group">
						<animation effect="zoom" start="95" end="100" time="200" tween="sine" easing="inout" center="auto" reversible="false">Focus</animation>
						<control type="image">
							<width>200</width>
							<height>300</height>
							<aspectratio>scale</aspectratio>
							<texture fallback="DefaultFallback.png" background="true">$INFO[ListItem.Art(thumb)]</texture>
							<fadetime>300</fadetime>
							<bordertexture colordiffuse="$VAR[ColorHighlightVar]" border="9">thumbs/thumbnail_focused.png</bordertexture>
							<bordersize>8</bordersize>
						</control>
						<control type="image">
							<left>132</left>
							<top>8</top>
							<width>60</width>
							<height>60</height>
							<texture>$VAR[OverlayVar]</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<left>1906</left>
				<top>135</top>
				<width>14</width>
				<height>1035</height>
				<onright>655</onright>
				<onleft>655</onleft>
				<ondown>60</ondown>
				<onup>60</onup>
			</control>
			<control type="grouplist">
				<top>179</top>
				<left>1140</left>
				<itemgap>15</itemgap>
				<control type="multiimage">
					<width>680</width>
					<height>400</height>
					<aspectratio>scale</aspectratio>
					<imagepath background="true">$INFO[Container(655).ListItem.Property(Fanart_Image)]</imagepath>
					<fadetime>400</fadetime>
					<visible>!IsEmpty(Container(655).ListItem.Property(Fanart_Image))</visible>
				</control>
				<control type="label">
					<width>680</width>
					<height>32</height>
					<font>font16_title</font>
					<textcolor>maintext</textcolor>
					<scroll>true</scroll>
					<label>[B]$INFO[Container(655).ListItem.Season,,x]$INFO[Container(655).ListItem.Episode,,. ]$INFO[Container(655).ListItem.Label2][/B]</label>
				</control>
				<control type="label">
					<label>$INFO[Container(655).ListItem.Label]</label>
					<width>680</width>
					<height>30</height>
					<font>font14</font>
					<textcolor>maintext</textcolor>
				</control>
				<control type="label">
					<label>[COLOR $VAR[ColorHighlightVar]]$ADDON[script.lazytv 32222]: $INFO[Container(655).ListItem.Property(percentplayed)][/COLOR]</label>
					<width>680</width>
					<height>30</height>
					<font>font14</font>
					<textcolor>maintext</textcolor>
				</control>
				<control type="textbox">
					<visible>StringCompare(ListItem.Plot,$LOCALIZE[32250])</visible>
                    <label>$INFO[Container(655).ListItem.Plot]</label>
					<width>680</width>
					<height>342</height>
					<font>font14_textbox</font>
					<autoscroll time="3000" delay="4000" repeat="5000">Skin.HasSetting(Enable.AutoScroll)</autoscroll>
					<include>ShowCaseInfoPanelButtonsValues</include>
				</control>
			</control>
		</control>
		<control type="group">
			<animation effect="slide" start="0,-90" end="0,0" delay="800" time="480">WindowOpen</animation>
			<animation effect="slide" end="0,-90" start="0,0" time="480">WindowClose</animation>
			<control type="image">
				<width>FullScreenWidth</width>
				<height>45</height>
				<texture>topbar.png</texture>
				<colordiffuse>$VAR[ColorBackgroundVar]</colordiffuse>
			</control>
			<control type="group">
				<top>-2</top>
				<control type="label">
					<width>900</width>
					<height>45</height>
					<font>topbar</font>
					<textoffsetx>15</textoffsetx>
					<textcolor>maintext</textcolor>
					<align>left</align>
					<aligny>center</aligny>
					<label>$INFO[System.AddonTitle(script.lazytv)]</label>
				</control>
				<control type="label">
					<left>1040</left>
					<width>880</width>
					<height>45</height>
					<font>topbar</font>
					<textoffsetx>15</textoffsetx>
					<textcolor>maintext</textcolor>
					<align>right</align>
					<aligny>center</aligny>
					<label>$INFO[Container(655).NumItems,, $LOCALIZE[31025]  â€¢  ][COLOR $VAR[ColorHighlightVar]]$INFO[Container(655).CurrentPage]$INFO[Container(655).NumPages,/][/COLOR]</label>
				</control>
				<control type="label">
					<left>0</left>
					<width>FullScreenWidth</width>
					<height>45</height>
					<font>topbar</font>
					<textoffsetx>15</textoffsetx>
					<textcolor>maintext</textcolor>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[System.Time]</label>
				</control>
			</control>
		</control>
		<include>Bottombar</include>
	</controls>
</window>